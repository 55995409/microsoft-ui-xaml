<UserControl
    x:Class="DataGridTestDriver.DataSourcesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="using:MUXControlsTestApp.Utilities"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="DarkGray" Margin="1">
            <StackPanel>
                <TextBlock Text="Collection" Margin="1"/>

                <ComboBox x:Name="cmbItemsSource" Margin="1" HorizontalAlignment="Stretch" SelectionChanged="cmbItemsSource_SelectionChanged">
                    <ComboBoxItem>Null</ComboBoxItem>
                    <ComboBoxItem>PersonCVS</ComboBoxItem>
                    <ComboBoxItem>EmployeeCVS</ComboBoxItem>
                    <ComboBoxItem>PersonGroupedByLastNameCVS</ComboBoxItem>
                    <ComboBoxItem>EmployeeGroupedByLastNameCVS</ComboBoxItem>
                    <ComboBoxItem>PersonList</ComboBoxItem>
                    <ComboBoxItem>EmployeeList</ComboBoxItem>
                    <ComboBoxItem>PersonBindableVectorView</ComboBoxItem>
                    <ComboBoxItem>EmployeeBindableVectorView</ComboBoxItem>
                    <ComboBoxItem>PersonObservableCollection</ComboBoxItem>
                    <ComboBoxItem>EmployeeObservableCollection</ComboBoxItem>
                    <ComboBoxItem>EmployeeProgressiveObservableCollection</ComboBoxItem>
                    <ComboBoxItem>EmployeeAdvancedCollectionView</ComboBoxItem>
                    <ComboBoxItem>Empty PersonObservableCollection</ComboBoxItem>
                    <ComboBoxItem>Empty EmployeeObservableCollection</ComboBoxItem>
                </ComboBox>

                <Button x:Name="btnClear" Content="Clear" Margin="1" Click="btnClear_Click"/>
            </StackPanel>
        </Border>
        
        <Border BorderThickness="1" BorderBrush="DarkGray" Margin="1" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Item" Margin="1"/>

                <StackPanel Margin="1">
                    <u:EntityPropertiesControl x:Name="epcItem" Margin="1"/>
                    <Button x:Name="btnReset" Width="80" Content="Reset" Margin="1" Click="btnReset_Click"/>
                    <Button x:Name="btnAdd" Width="80" Content="Add" Margin="1" Click="btnAdd_Click"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnInsert" Width="80" Content="Insert" Margin="1" Click="btnInsert_Click"/>
                        <TextBlock Text="Index:" VerticalAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtInsertionItemIndex" Text="0" Margin="1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnRemove" Width="80" Content="Remove" Margin="1" Click="btnRemove_Click"/>
                        <TextBlock Text="Index:" VerticalAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtRemovalItemIndex" Text="0" Margin="1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnGet" Width="80" Content="Get" Margin="1" Click="btnGet_Click"/>
                        <TextBlock Text="Index:" VerticalAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtGetItemIndex" Text="0" Margin="1"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Margin="1" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Source Property Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSourcePropertyName" VerticalAlignment="Center"/>
            </StackPanel>
            <Button x:Name="btnRaiseINPC" Content="Raise INPC.PropertyChanged" Click="btnRaiseINPC_Click"/>
        </StackPanel>

        <StackPanel Margin="1" Grid.Row="3">
            <Button x:Name="btnClearException" Content="Clear Exception" Margin="1" Click="btnClearException_Click"/>
            <TextBox x:Name="txtException" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Margin="1" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
