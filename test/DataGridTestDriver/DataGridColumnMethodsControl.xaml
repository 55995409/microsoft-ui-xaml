<UserControl
    x:Class="DataGridTestDriver.DataGridColumnMethodsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataGridTestDriver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="LightGray" Margin="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Item Index:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtItemIndex" Text="0" Margin="1"/>
                </StackPanel>
                <Button x:Name="btnGetCellContent" Content="GetGetCellContent" Margin="1" Click="btnGetCellContent_Click"/>
                <TextBox x:Name="txtGetCellContentResult" IsReadOnly="True" Margin="1"/>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1">
            <Button x:Name="btnClearException" Content="Clear Exception" Margin="1" Click="btnClearException_Click"/>
            <TextBox x:Name="txtException" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Margin="1" MaxWidth="350" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
