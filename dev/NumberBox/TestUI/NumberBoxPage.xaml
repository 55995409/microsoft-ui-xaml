<local:TestPage
    x:Class="MUXControlsTestApp.NumberBoxPage"
    x:Name="NumberBoxTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12">

        <RelativePanel x:Name="ParentPanel">


            <ComboBox x:Name="validationmode" Header="Validation Mode (WIP)" IsEnabled="False">
                <x:String> </x:String>
            </ComboBox>


            <ComboBox x:Name="Spinmode"
                SelectedValue="Hidden"
                      SelectionChanged="SpinMode_Changed"
                Header="SpinButtonMode"
                RelativePanel.Below="validationmode">
                <x:String>Hidden</x:String>
                <x:String>Inline</x:String>
            </ComboBox>
            
            <CheckBox x:Name="hyperscroll"
                IsChecked="False"
                Content="HyperScroll Enabled"
                RelativePanel.Below="Spinmode"
                Checked="Hyperscroll_Checked"
                Unchecked="Hyperscroll_Checked"/>

            <ComboBox x:Name="boundbox"
                RelativePanel.Below="hyperscroll"
                Header="MinMaxMode"
                      SelectedValue="None"
                      SelectionChanged="Bounds_Changed">
                <x:String>None</x:String>
                <x:String>MinEnabled</x:String>
                <x:String>MaxEnabled</x:String>
                <x:String>MinAndMaxEnabled</x:String>
                <x:String>WrapEnabled</x:String>
            </ComboBox>





            <TextBlock Text="Min" RelativePanel.RightOf="min" RelativePanel.Below="boundbox" />
            <controls:NumberBox x:Name="min"
                RelativePanel.Below="boundbox"/>
            <TextBlock Text="Max" RelativePanel.RightOf="max" RelativePanel.Below="min" />

            <controls:NumberBox x:Name="max"
                RelativePanel.Below="min"/>

            <TextBlock Text="Fraction Digits" RelativePanel.RightOf="frac" RelativePanel.Below="max" />
            <TextBox x:Name="frac" RelativePanel.Below="max" TextChanged="fraction_changed" />

            <TextBlock Text="Integer Digits" RelativePanel.RightOf="intdig" RelativePanel.Below="frac" />
            <controls:NumberBox x:Name="intdig" RelativePanel.Below="frac" />

            <TextBlock Text="Significant Digits" RelativePanel.RightOf="sigdig" RelativePanel.Below="intdig" />
            <controls:NumberBox x:Name="sigdig" RelativePanel.Below="intdig" />

            <CheckBox x:Name="dec" RelativePanel.Below="sigdig" Content="IsDecimalPointAlwaysDisplayed" />
            <CheckBox x:Name="zerosign" RelativePanel.Below="dec" Content="IsZeroSigned" />


            <controls:NumberBox
                x:Name="numBox"
                Margin="0,50,0,0"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                MinValue="{x:Bind min.Value, Mode=OneWay}"
                MaxValue="{x:Bind max.Value, Mode=OneWay}"
                IntegerDigits="8"
                />

        </RelativePanel>











    </Grid>
</local:TestPage>
