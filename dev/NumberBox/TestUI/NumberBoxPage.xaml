<local:TestPage
    x:Class="MUXControlsTestApp.NumberBoxPage"
    x:Name="NumberBoxTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12">

        <RelativePanel x:Name="ParentPanel">


            <ComboBox x:Name="validationmode" Header="Validation Mode (WIP)" IsEnabled="False">
                <x:String> </x:String>
            </ComboBox>


            <ComboBox x:Name="Spinmode"
                SelectedValue="Hidden"
                      SelectionChanged="SpinMode_Changed"
                Header="SpinButtonMode"
                RelativePanel.Below="validationmode">
                <x:String>Hidden</x:String>
                <x:String>Inline</x:String>
            </ComboBox>
            
            <CheckBox x:Name="hyperscroll"
                IsChecked="False"
                Content="HyperScroll Enabled"
                RelativePanel.Below="Spinmode"
                Checked="Hyperscroll_Checked"
                Unchecked="Hyperscroll_Checked"/>

            <ComboBox x:Name="boundbox"
                RelativePanel.Below="hyperscroll"
                Header="MinMaxMode"
                      SelectedValue="NoBounds"
                      SelectionChanged="Bounds_Changed">
                <x:String>NoBounds</x:String>
                <x:String>MinEnabled</x:String>
                <x:String>MaxEnabled</x:String>
                <x:String>MinAndMaxEnabled</x:String>
                <x:String>WrapEnabled</x:String>
            </ComboBox>





            
            <controls:NumberBox x:Name="min"
               
                RelativePanel.Below="boundbox"/>



            
            <TextBox x:Name="ToZeroKeyframeAnimationProgressTextBox"
                IsEnabled="False"
                Text="None"
                RelativePanel.Below="min"/>
            <Button x:Name="FromOneKeyframeAnimationPlayButton"
                RelativePanel.Below="ToZeroKeyframeAnimationProgressTextBox"/>
            <TextBox x:Name="FromOneKeyframeAnimationProgressTextBox"
                IsEnabled="False"
                Text="None"
                RelativePanel.Below="FromOneKeyframeAnimationPlayButton"/>
            <Button x:Name="ReverseNegativePlaybackRateAnimationPlayButton"
                RelativePanel.Below="FromOneKeyframeAnimationProgressTextBox"/>
            <TextBox x:Name="ReverseNegativePlaybackRateAnimationTextBox"
                IsEnabled="False"
                Text="None"
                RelativePanel.Below="ReverseNegativePlaybackRateAnimationPlayButton"/>
            <Button x:Name="ReversePositivePlaybackRateAnimationPlayButton"
                RelativePanel.Below="ReverseNegativePlaybackRateAnimationTextBox"/>

            <controls:NumberBox
                x:Name="numBox"
                Margin="0,50,0,0"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                MinValue="{x:Bind min.Value, Mode=OneWay}" />

        </RelativePanel>











    </Grid>
</local:TestPage>
