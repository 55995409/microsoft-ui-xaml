<Page
x:Class="MUXControlsTestApp.ItemsViewBasicPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:l="using:MUXControlsTestApp.ItemsViewPrototype"
xmlns:c="using:Microsoft.UI.Xaml.Controls"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d">
    <Page.Resources>
        <c:StackLayout  x:Name="stackLayout" ItemSpacing="5" />
        <c:FlowLayout x:Name="flowLayout" MinItemSpacing="5" LineSpacing="5" LineAlignment="Near" />
        <c:GridLayout x:Name="gridLayout" ItemWidth="200" ItemHeight="100" MinItemSpacing="5" LineSpacing="5" LineAlignment="Near"/>
        <l:TableRowLayout x:Name="sharedRowLayout" />
        <c:RecyclePool x:Name="recyclePool" />
        <Style TargetType="l:ItemsView">
            <Setter Property="Margin" Value="20" />
        </Style>

        <l:ViewDefinition Layout="{StaticResource stackLayout}" x:Name="stackView1">
            <l:ViewDefinition.ViewGenerator>
                <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}" >
                    <DataTemplate x:Key="StackItemTemplate">
                        <l:ItemsViewItem Background="LightGray" Layout="{StaticResource stackLayout}">
                            <TextBlock Text="{Binding Title}" />
                        </l:ItemsViewItem>
                    </DataTemplate>
                </c:RecyclingViewGenerator>
            </l:ViewDefinition.ViewGenerator>
        </l:ViewDefinition>

        <l:ViewDefinition Layout="{StaticResource flowLayout}" x:Name="flowView1">
            <l:ViewDefinition.ViewGenerator>
                <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}">
                    <DataTemplate x:Key="Flow1ItemTemplate">
                        <l:ItemsViewItem Background="LightGray" BorderBrush="Gray" BorderThickness="1" Layout="{StaticResource stackLayout}">
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding Author}" />
                            <TextBlock Text="{Binding Genre}" />
                            <TextBlock Text="{Binding Price}" />
                            <TextBlock Text="{Binding ID}" />
                        </l:ItemsViewItem>
                    </DataTemplate>
                </c:RecyclingViewGenerator>
            </l:ViewDefinition.ViewGenerator>
        </l:ViewDefinition>

        <l:ViewDefinition Layout="{StaticResource stackLayout}" x:Name="tableView1">
            <l:ViewDefinition.Header>
                <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" Background="LightGray">
                    <TextBlock Text="Title" />
                    <TextBlock Text="Author" />
                    <TextBlock Text="Genre" />
                    <TextBlock Text="Price" />
                    <TextBlock Text="ID" />
                </l:TableHeaderRow>
            </l:ViewDefinition.Header>
            <l:ViewDefinition.ViewGenerator>
                <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}" >
                    <DataTemplate x:Key="RowTemplate" >
                        <l:TableRow Background="LightBlue" Layout="{StaticResource sharedRowLayout}">
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding Author}" />
                            <TextBlock Text="{Binding Genre}" />
                            <TextBlock Text="{Binding Price}" />
                            <TextBlock Text="{Binding ID}" />
                        </l:TableRow>
                    </DataTemplate>
                </c:RecyclingViewGenerator>
            </l:ViewDefinition.ViewGenerator>
        </l:ViewDefinition>

        <l:ViewDefinition Layout="{StaticResource stackLayout}" x:Name="groupedTable1">
            <l:ViewDefinition.Header>
                <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" Background="LightGray">
                    <TextBlock Text="Title" />
                    <TextBlock Text="Author" />
                    <TextBlock Text="Genre" />
                    <TextBlock Text="Price" />
                    <TextBlock Text="ID" />
                </l:TableHeaderRow>
            </l:ViewDefinition.Header>
            <l:ViewDefinition.ViewGenerator>
                <l:HierarchicalViewGenerator SelectTemplate="HierarchicalViewGenerator_SelectTemplate">
                    <l:HierarchicalViewGenerator.Templates>
                        <DataTemplate x:Key="RowTemplate" >
                            <l:TableRow Background="LightBlue" Layout="{StaticResource sharedRowLayout}" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Title}" />
                                <TextBlock Text="{Binding Author}" />
                                <TextBlock Text="{Binding Genre}" />
                                <TextBlock Text="{Binding Price}" />
                                <TextBlock Text="{Binding ID}" />
                            </l:TableRow>
                        </DataTemplate>
                        <l:HierarchicalDataTemplate x:Key="GroupTemplate" ItemsSource="{Binding Foo}"  >
                            <DataTemplate>
                                <TextBlock  Text="{Binding Key}" FontSize="18" FontWeight="SemiBold"/>
                            </DataTemplate>
                        </l:HierarchicalDataTemplate>
                    </l:HierarchicalViewGenerator.Templates>
                </l:HierarchicalViewGenerator>
            </l:ViewDefinition.ViewGenerator>
        </l:ViewDefinition>

        <DataTemplate x:Name="authorTemplate">
            <TextBlock Text="{Binding Author}" />
        </DataTemplate>
        <DataTemplate x:Name="titleTemplate">
            <TextBlock Text="{Binding Title}" />
        </DataTemplate>
        <DataTemplate x:Name="genreTemplate">
            <TextBlock Text="{Binding Genre}" />
        </DataTemplate>
        <DataTemplate x:Name="priceTemplate">
            <TextBlock Text="{Binding Price}" />
        </DataTemplate>
        <DataTemplate x:Name="idTemplate">
            <TextBlock Text="{Binding ID}" />
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel>
            <l:ItemsView x:Name="stackView" ItemsSource="{Binding Books}">
                <l:ItemsView.ViewDefinition>
                    <l:ViewDefinition Layout="{StaticResource stackLayout}">
                        <l:ViewDefinition.ViewGenerator>
                            <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}" >
                                <DataTemplate x:Key="StackItemTemplate">
                                    <l:ItemsViewItem Layout="{StaticResource stackLayout}" Background="LightGray">
                                        <TextBlock Text="{Binding Title}" />
                                    </l:ItemsViewItem>
                                </DataTemplate>
                            </c:RecyclingViewGenerator>
                        </l:ViewDefinition.ViewGenerator>
                    </l:ViewDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>

            <l:ItemsView x:Name="gridView" ItemsSource="{Binding Books}">
                <l:ItemsView.ViewDefinition>
                    <l:ViewDefinition Layout="{StaticResource gridLayout}">
                        <l:ViewDefinition.ViewGenerator>
                            <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}">
                                <DataTemplate x:Key="FlowItemTemplate">
                                    <l:ItemsViewItem Layout="{StaticResource stackLayout}" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock Text="{Binding Title}" />
                                        <TextBlock Text="{Binding Author}" />
                                        <TextBlock Text="{Binding Genre}" />
                                        <TextBlock Text="{Binding Price}" />
                                        <TextBlock Text="{Binding ID}" />
                                    </l:ItemsViewItem>
                                </DataTemplate>
                            </c:RecyclingViewGenerator>
                        </l:ViewDefinition.ViewGenerator>
                    </l:ViewDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>

            <l:ItemsView x:Name="tableView" ItemsSource="{Binding Books}">
                <l:ItemsView.ViewDefinition>
                    <l:ViewDefinition Layout="{StaticResource stackLayout}">
                        <l:ViewDefinition.Header>
                            <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" >
                                <TextBlock Text="Title"/>
                                <TextBlock Text="Author" />
                                <TextBlock Text="Genre"/>
                                <TextBlock Text="Price" />
                                <TextBlock Text="ID"/>
                            </l:TableHeaderRow>
                        </l:ViewDefinition.Header>
                        <l:ViewDefinition.ViewGenerator>
                            <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}" >
                                <DataTemplate x:Key="RowTemplate" >
                                    <l:TableRow Background="LightBlue" Layout="{StaticResource sharedRowLayout}">
                                        <TextBlock Text="{Binding Title}" />
                                        <TextBlock Text="{Binding Author}" />
                                        <TextBlock Text="{Binding Genre}" />
                                        <TextBlock Text="{Binding Price}" />
                                        <TextBlock Text="{Binding ID}" />
                                    </l:TableRow>
                                </DataTemplate>
                            </c:RecyclingViewGenerator>
                        </l:ViewDefinition.ViewGenerator>
                    </l:ViewDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>


            <l:ItemsView x:Name="groupedTableView" ItemsSource="{Binding ByGenre}">
                <l:ItemsView.ViewDefinition>
                    <l:ViewDefinition Layout="{StaticResource stackLayout}">
                        <l:ViewDefinition.Header>
                            <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" Background="LightGray">
                                <TextBlock Text="Title" />
                                <TextBlock Text="Author" />
                                <TextBlock Text="Genre" />
                                <TextBlock Text="Price" />
                                <TextBlock Text="ID" />
                            </l:TableHeaderRow>
                        </l:ViewDefinition.Header>
                        <l:ViewDefinition.ViewGenerator>
                            <l:HierarchicalViewGenerator SelectTemplate="HierarchicalViewGenerator_SelectTemplate">
                                <l:HierarchicalViewGenerator.Templates>
                                    <DataTemplate x:Key="RowTemplate" >
                                        <l:TableRow Background="LightBlue" Layout="{StaticResource sharedRowLayout}" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Title}" />
                                            <TextBlock Text="{Binding Author}" />
                                            <TextBlock Text="{Binding Genre}" />
                                            <TextBlock Text="{Binding Price}" />
                                            <TextBlock Text="{Binding ID}" />
                                        </l:TableRow>
                                    </DataTemplate>
                                    <l:HierarchicalDataTemplate x:Key="GroupTemplate" ItemsSource="{Binding Foo}"  >
                                        <DataTemplate>
                                            <TextBlock  Text="{Binding Key}" FontSize="18" FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </l:HierarchicalDataTemplate>
                                </l:HierarchicalViewGenerator.Templates>
                            </l:HierarchicalViewGenerator>
                        </l:ViewDefinition.ViewGenerator>
                    </l:ViewDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>

            <StackPanel Orientation="Horizontal">
                <Button Content="Stack" Click="OnSwitchViewClicked" Tag="stackView1"/>
                <Button Content="Flow" Click="OnSwitchViewClicked" Tag="flowView1"/>
                <Button Content="Table" Click="OnSwitchViewClicked" Tag="tableView1" />
                <Button Content="Grouped Table" Click="OnSwitchViewClicked" Tag="groupedTable1" />
            </StackPanel>

            <l:ItemsView x:Name="itemsView" ItemsSource="{Binding Books}">
                <l:ItemsView.ViewDefinition>
                    <l:ViewDefinition Layout="{StaticResource stackLayout}">
                        <l:ViewDefinition.ViewGenerator>
                            <c:RecyclingViewGenerator RecyclePool="{StaticResource recyclePool}" >
                                <DataTemplate x:Key="StackItemTemplate">
                                    <l:ItemsViewItem Layout="{StaticResource stackLayout}"  Background="LightGray">
                                        <TextBlock Text="{Binding Title}" />
                                    </l:ItemsViewItem>
                                </DataTemplate>
                            </c:RecyclingViewGenerator>
                        </l:ViewDefinition.ViewGenerator>
                    </l:ViewDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>

            <Button Content="Add Author Column" Click="OnAddAuthorClicked" />
            <l:ItemsView x:Name="itemsViewWithTable" ItemsSource="{Binding Books}">
                <l:ItemsView.ViewDefinition>
                    <l:TableDefinition>
                        <l:ItemsViewColumnDefinition Heading="Title" CellTemplate="{StaticResource titleTemplate}" />
                        <l:ItemsViewColumnDefinition Heading="Genre" CellTemplate="{StaticResource genreTemplate}" />
                        <l:ItemsViewColumnDefinition Heading="Price" CellTemplate="{StaticResource priceTemplate}" />
                        <l:ItemsViewColumnDefinition Heading="ID" CellTemplate="{StaticResource idTemplate}" />
                    </l:TableDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>

            <l:ItemsView x:Name="itemsViewWithTableGrouped" ItemsSource="{Binding ByGenre}">
                <l:ItemsView.ViewDefinition>
                    <l:TableDefinition IsGroup="TableViewBase_IsGroup">
                        <!-- heading optional Heading="Title"-->
                        <l:ItemsViewTextColumnDefinition DisplayMemberPath="Title" />
                        <l:ItemsViewTextColumnDefinition DisplayMemberPath="Genre" />
                        <l:ItemsViewTextColumnDefinition DisplayMemberPath="Price" />
                        <l:ItemsViewTextColumnDefinition DisplayMemberPath="ID" />
                        <l:TableDefinition.GroupHeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Key}" FontWeight="Bold"/>
                            </DataTemplate>
                        </l:TableDefinition.GroupHeaderTemplate>
                    </l:TableDefinition>
                </l:ItemsView.ViewDefinition>
            </l:ItemsView>
        </StackPanel>
    </ScrollViewer>
</Page>
